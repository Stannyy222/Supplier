@model List<supplier>

<a asp-controller="Home" asp-action="Index" class=" btn btn-primary"
        > Back to Home Page </a>
<a asp-controller="Supplier" asp-action="Add" class=" btn btn-success" 
        > Create New Supplier </a>

@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No Supplier Records Found!
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th> Company Name </th>
                <th> Address </th>
                <th> Representative </th>
                <th> Contact Number </th>
                <th> Date Added </th>
                <th> Date Modified </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td> @item.CompanyName</td>
                     <td> @item.Address</td>
                      <td> @item.Representative</td>
                       <td> @item.ContactNo</td>
                        <td> @item.DateAdded</td>
                         <td> @item.DateModified</td>
                         <td>
                             <a asp-controller="Supplier" asp-action="Edit" 
                             asp-route-id="@item.SupplierID" class="btn btn-info btn-sm"> Edit </a>
                             
                         </td>
                         <td> 

                             <form asp-controller="Supplier" asp-action="Delete" method="post">
                                 <input type="hidden" name="SupplierID" value="@item.SupplierID">
                                 <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                             </form>
                         </td>
                </tr>
            }
        </tbody>


    </table>
}
