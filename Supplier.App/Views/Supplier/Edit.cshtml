@model supplier

<h3>Edit Supplier</h3>
<a asp-controller="Supplier" asp-action="Index" class="btn btn-primary" 
        > <i class="fas fa-arrow-left"></i> </a>


<form asp-controller="Supplier" asp-action="Edit" method="post">
    <input type="hidden" asp-for="SupplierID" />

    <label asp-for="CompanyName"></label>
    <input type="text" asp-for="CompanyName" class="form-control" />
    <br />

    <label asp-for="Address"></label>
    <input type="text" asp-for="Address" class="form-control" />
    <br />

    <label asp-for="Representative"></label>
    <input type="text" asp-for="Representative" class="form-control" />
    <br />

    <label asp-for="ContactNo"></label>
    <input type="text" asp-for="ContactNo" class="form-control" />
    <br />

    <input type="hidden" asp-for="DateAdded" value="@Model.DateAdded" />
    <input type="hidden" asp-for="DateModified" value="Utc.Now"/>
    <br />

    <div class="btn btn-success" >
        <i class="fas fa-save"></i>
    <input type="submit" value="Save Changes" class="text-decoration-none bg-transparent border-0 text-white" />
    </div>

    <a asp-controller="Supplier" asp-action="Index" class="btn btn-danger" 
        > Cancel </a>

</form>


