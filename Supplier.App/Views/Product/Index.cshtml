@model List<productVM>

<a asp-controller="Home" asp-action="Index" class=" btn btn-primary"
        > Back to Home Page </a>
<a asp-controller="Product" asp-action="Add" class=" btn btn-success" 
        > Create New Products </a>

@if (Model.Count() < 1)
{
    <br />
    <div class="alert alert-info">
        No Product Records Found!
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th> Product ID </th>
                <th> Name </th>
                <th> Description </th>
                <th> Quantity </th>
                <th> Unit </th>
                <th> Date Added </th>
                <th> Date Modified </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td> @item.ProductID</td>
                     <td> @item.Name</td>
                      <td> @item.Description</td>
                       <td> @item.Qty</td>
                        <td> @item.Unit</td>
                         <td> @item.DateAdded</td>
                          <td> @item.DateModified</td>
                           <td>
                             <a asp-controller="Product" asp-action="Edit" 
                             asp-route-id="@item.ProductID" class="btn btn-info btn-sm"> Edit </a>
                             
                           </td>
                         <td> 

                             <form asp-controller="Product" asp-action="Delete" method="post">
                                 <input type="hidden" name="ProductID" value="@item.ProductID">
                                 <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                             </form>
                         </td>
                </tr>
            }
        </tbody>


    </table>
}
