@model productVM


<h3> Edit Product </h3>
<a asp-controller="Product" asp-action="Index" class="btn btn-primary" 
        > Back </a>

<form asp-controller="Product" asp-action="Edit" method="post">

    <input type="hidden" asp-for="ProductID" />

    <label asp-for="Name"></label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label asp-for="Description"></label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />

    <label asp-for="Qty">Quantity</label>
    <input type="number" asp-for="Qty" class="form-control" readonly/>
    <br />
    <label asp-for="Unit"></label>
    <input type="text" asp-for="Unit" class="form-control" />
    <span asp-validation-for="Unit" class="text-danger"></span>
    <br />

    <input type="hidden" asp-for="DateAdded" value="@Model.DateAdded" />

    <input type="submit" value="Save Changes" class="btn btn-success" />
    <a asp-controller="Product" asp-action="Index" class="btn btn-danger" 
        > Cancel </a>
</form>

